<h1>Listing mains</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Slug</th>
      <th>Пункт меню</th>
      <th>Картинка</th>
      <th>Контент</th>
      <th>Meta-Description</th>
      <th>Meta-Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mains.each do |main| %>
      <tr>
        <td><%= main.title %></td>
        <td><%= main.slug %></td>
        <td><%= main.menupunkt %></td>
        <td>
			<%= image_tag(main.imageattachment)  %>
		</td>
        <td><%= main.body %></td>
        <td><%= main.description %></td>
        <td><%= main.keywords %></td>
        <td><%= link_to 'Show', main %></td>
        <td><%= link_to 'Edit', edit_main_path(main) %></td>
        <td><%= link_to 'Destroy', main, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Main', new_main_path %>
