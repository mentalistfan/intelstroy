<div class="row">   
                    <div class="col-lg-12">
                    
<h1 class="page-header">Информация на главной странице</h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> <%= link_to "Админка", admin_path %>
                            </li>
                            <li class="active">
                                <i class="fa fa-dashboard"></i> На главной
                            </li>
                        </ol>
<div class="row">
                    <div class="col-lg-12">
<div class="table-responsive">     

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Название</th>
      <th>Slug</th>
      <th>Пункт меню</th>
      <th>Картинка</th>
      <th>Контент</th>
      <th>Meta-Description</th>
      <th>Meta-Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mains.each do |main| %>
      <tr>
        <td><%= main.title %></td>
        <td><%= main.slug %></td>
        <td><%= main.menupunkt %></td>
        <td>
			<%= image_tag(main.imageattachment)  %>
		</td>
        <td><%= main.body %></td>
        <td><%= main.description %></td>
        <td><%= main.keywords %></td>
        <td><%= link_to 'Просмотр', main %></td>
        <td><%= link_to 'Изменить', edit_main_path(main) %></td>
        <td><%= link_to 'Удалить', main, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div></div></div>
<br>

<%= link_to 'Новая информация на главной', new_main_path %>
</div></div>