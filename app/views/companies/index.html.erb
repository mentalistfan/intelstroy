<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Menupunkt</th>
      <th>Description</th>
      <th>Keywords</th>
      <th>Image</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.title %></td>
        <td><%= company.slug %></td>
        <td><%= company.menupunkt %></td>
        <td><%= company.description %></td>
        <td><%= company.keywords %></td>
        <td><%= company.image %></td>
        <td><%= company.body %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

