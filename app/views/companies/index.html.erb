<div class="row">   
                    <div class="col-lg-12">
                    
<h1 class="page-header">О компании</h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> <%= link_to "Админка", admin_path %>
                            </li>
                            <li class="active">
                                <i class="fa fa-dashboard"></i> О компании
                            </li>
                        </ol>
<div class="row">
                    <div class="col-lg-12">
<div class="table-responsive">      

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Название</th>
      <th>Slug</th>
      <th>Пункт меню</th>
      <th>meta Description</th>
      <th>meta Keywords</th>
      <th>Картинка</th>
      <th>Контент</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.title %></td>
        <td><%= company.slug %></td>
        <td><%= company.menupunkt %></td>
        <td><%= company.description %></td>
        <td><%= company.keywords %></td>
        <td><%= image_tag company.image %></td>
        <td><%= company.body %></td>
        <td><%= link_to 'Просмотр', company %></td>
        <td><%= link_to 'Изменить', edit_company_path(company) %></td>
        <td><%= link_to 'Удалить', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая запись о компании', new_company_path %>
</div></div></div></div></div>